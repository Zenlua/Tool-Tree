# Kakathic

if [ "$1" == '-h' ] || [ "$1" == '--help' ] || [ -z "$1" ] || [ -z "$2" ] || [ -z "$3" ];then
    if [ -z "$2" ] || [ -z "$3" ];then
    echo "Error: $1-$2-$3" >&2
    fi
    echo "Use: sprop ro.vip 1 /path/file" >&2
    exit
fi

if [ "$(grep -cm1 "^$1=" "$3")" == 1 ];then
sed -i "/$1=/c\
$1=$2" "$3";
else
echo "$1=$2" >> "$3";
fi
