#!/data/data/com.tool.tree/files/home/bin/bash

if [ "$1" == '-h' ] || [ "$1" == '--help' ] || [ -z "$1" ];then
echo "Use: showtoast 'Xin chÃ o'"
exit
fi

if [ "$1" == "-a" ] || [ "$1" == "--am" ] || [ -z "$shell_progres" ];then
    if [ "$1" == "-a" ] || [ "$1" == "--am" ]; then
        shift
    fi
    am broadcast -n com.tool.tree/com.tool.tree.ToastReceiver -a com.tool.tree.SHOW --es text "$1" &>/dev/null
else
    echo "am:[broadcast -n com.tool.tree/com.tool.tree.ToastReceiver -a com.tool.tree.SHOW --es text '$@']"
fi
