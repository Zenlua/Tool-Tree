<resources>

    <!-- Theme mặc định của ứng dụng -->
    <style name="Theme.MusicPlayerApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Màu nền của ứng dụng -->
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        
        <!-- Chỉnh sửa màu sắc, font chữ, và các thuộc tính giao diện khác -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Tuỳ chỉnh các thuộc tính theme khác nếu cần -->
        <item name="android:statusBarColor">@android:color/black</item>
    </style>

</resources>